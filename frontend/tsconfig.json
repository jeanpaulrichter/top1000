{
    "compilerOptions": {
        "allowJs": false,
        "target": "es2020",
        "module": "es2020",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "rootDir": "src",
        "baseUrl": "src",
    },
    "include": ["src/**/*"]
}