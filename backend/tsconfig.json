{
    "compilerOptions": {
        "outDir": "../debug",
        "allowJs": false,
        "strict": true,
        "target": "ES2022",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "lib": ["ES2020.Promise", "DOM"],
        "rootDir": "src"
    },
    "include": ["src/**/*"]
}